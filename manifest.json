{
  "manifest_version": 3,
  "name": "Miniblox Flashback",
  "version": "1.0",
  "description": "Client-side replay & freelook for Miniblox.io",

  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://miniblox.io/*"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://miniblox.io/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
      "matches": ["*://miniblox.io/*"],
      "js": ["content.js"]
    }
  ]
}
