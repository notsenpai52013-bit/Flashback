{
  "manifest_version": 3,
  "name": "Miniblox Flashback",
  "version": "0.1",
  "description": "Client-side replay & freelook for Miniblox.io",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://miniblox.io/*"],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://miniblox.io/*"],
      "js": ["content.js"]
    }
  ]
}
